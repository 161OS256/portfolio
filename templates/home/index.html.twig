{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8 text-gray-500">
                {{'projects'|trans}} 
            </h1>

            <span class="font-light text-gray-200 italic">
                {{'coder' |trans}}
            </span>
        </div>
    </div>


    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
        <!-- Review Item -->
        {% for project in projects %}
            <div class="text-center pt-8 pb-4">
                <a href="/{{ current_locale }}/{{project.route}}">
                <img src="{{ asset(project.src) }}" alt="" class="shadow-xl rounded-md" />
                </a>
                <h2 class="text-gray-500 font-bold text-2xl py-2">
                   {{project.name}}
                </h2>

                <span class="text-gray-500">
                    <span class="italic text-sm ">{{'project-01.start-coding' |trans}}</span>
                </span>
            </div>
        {% endfor %}
    </div>
{% endblock %}