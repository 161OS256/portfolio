<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Marek Bartocha{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">
            <link rel="stylesheet" href="{{ asset('build/vendors-node_modules_bootstrap_dist_js_bootstrap_esm_js-node_modules_bootstrap_dist_css_boots-bd9352.css') }}">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/{{current_locale}}">{{'programer'|trans }}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                    <a class="nav-link" href="/{{current_locale}}">{{'home' |trans}}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="about">{{'about' |trans}}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="contact">{{'contact' |trans}}</a>
                    </li>
                </ul>
                <a href="{{ path('home_index', {'_locale': 'pl'}) }}/{{site}}" class="btn btn-light btn-sm ms-3 btn-language">🇵🇱 PL</a>
                <a href="{{ path('home_index', {'_locale': 'en'}) }}/{{site}}" class="btn btn-light btn-sm ms-3 btn-language">🇬🇧 EN</a>
            </div>
        </div>
    </nav><br><br>
        {% for message in app.flashes('notice') %}
            <div class="notice">
                {{ message }}
            </div>
         {% endfor %}

        {% block body %}{% endblock %}
    </body>
</html>
